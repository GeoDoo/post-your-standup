{
  "name": "post-your-standup",
  "version": "0.0.1",
  "private": true,
  "description": "An interactive Slack app to help you post your standup based on your Jira boards",
  "main": "app.js",
  "scripts": {
    "start": "nodemon server.js",
    "test:unit": "jest unit --env=node --passWithNoTests",
    "test:unit:cov": "jest unit --env=node --passWithNoTests --coverage",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "prod:start": "pm2 start server.js -i -1 -f",
    "prod:restart": "pm2 restart server.js -i -1",
    "prod:reload:all": "pm2 reload all",
    "prod:stop:all": "pm2 delete all",
    "release": "semantic-release",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md)\"",
    "docker-dev": "docker-compose up",
    "docker-prod": "docker-compose up -d"
  },
  "dependencies": {
    "@slack/bolt": "^2.2.3",
    "dotenv": "^8.2.0",
    "moment": "^2.27.0",
    "mongoose": "^5.9.27",
    "node-fetch": "^2.6.0",
    "pm2": "^4.4.0"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeoDoo/post-your-standup.git"
  },
  "author": "George Karametas <geometas@hotmail.com> (https://geodoo.work/)",
  "bugs": {
    "url": "https://github.com/GeoDoo/post-your-standup/issues"
  },
  "license": "GNU GPL v3.0",
  "keywords": [
    "node",
    "express"
  ],
  "devDependencies": {
    "codecov": "^3.7.2",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
