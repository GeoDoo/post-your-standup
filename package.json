{
  "name": "post-your-standup",
  "version": "0.0.1",
  "private": true,
  "description": "An interactive Slack app to help you post your standup based on your Jira boards",
  "main": "app.js",
  "scripts": {
    "start": "nodemon server.js",
    "test:unit": "jest unit --env=node --passWithNoTests",
    "test:unit:cov": "jest unit --env=node --passWithNoTests --coverage --config=jest.config.json",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "prod:start": "pm2 start server.js -i -1 -f",
    "prod:restart": "pm2 restart server.js -i -1",
    "prod:reload:all": "pm2 reload all",
    "prod:stop:all": "pm2 delete all",
    "release": "semantic-release",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md)\"",
    "docker-dev": "docker-compose up",
    "docker-prod": "docker-compose up -d",
    "admin:start": "webpack-dev-server --open --hot --mode development",
    "admin:server:start": "nodemon admin/server"
  },
  "dependencies": {
    "@slack/bolt": "^2.3.0",
    "dotenv": "^8.2.0",
    "module-alias": "^2.2.2",
    "moment": "^2.27.0",
    "mongoose": "^5.10.0",
    "node-fetch": "^2.6.0",
    "pm2": "^4.4.1",
    "@apollo/client": "^3.1.2",
    "apollo-server": "^2.16.1",
    "graphql": "^15.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "uuid": "^8.3.0"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeoDoo/post-your-standup.git"
  },
  "author": "George Karametas <geometas@hotmail.com> (https://geodoo.work/)",
  "bugs": {
    "url": "https://github.com/GeoDoo/post-your-standup/issues"
  },
  "license": "GNU GPL v3.0",
  "keywords": [
    "node",
    "express"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/react": "^10.4.9",
    "autoprefixer": "^9.8.5",
    "babel-loader": "^8.1.0",
    "codecov": "^3.7.2",
    "commitizen": "^4.2.1",
    "css-loader": "^4.2.2",
    "cz-conventional-changelog": "^3.2.1",
    "eslint": "^7.7.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.1.1",
    "semantic-release": "^17.1.1",
    "style-loader": "^1.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@core": "./core",
    "@db": "./db",
    "@utils": "./utils"
  }
}
