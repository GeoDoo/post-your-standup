{
  "name": "post-your-standup",
  "version": "0.0.1",
  "description": "An interactive Slack app to help you post your standup based on your Jira boards",
  "main": "app.js",
  "scripts": {
    "start": "nodemon server.js",
    "test:unit": "jest --env=node --passWithNoTests",
    "test:unit:cov": "jest --env=node --passWithNoTests --coverage",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "prod:start": "pm2 start server.js -i -1",
    "prod:restart": "pm2 restart server.js -i -1",
    "prod:reload:all": "pm2 reload all",
    "prod:stop:all": "pm2 delete all",
    "release": "semantic-release"
  },
  "dependencies": {
    "@slack/bolt": "^2.1.1",
    "dotenv": "^8.2.0",
    "moment": "^2.27.0",
    "node-fetch": "^2.6.0",
    "pm2": "^4.4.0",
    "sqlite3": "^5.0.0"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeoDoo/post-your-standup.git"
  },
  "author": "George Karametas <geometas@hotmail.com> (https://geodoo.work/)",
  "bugs": {
    "url": "https://github.com/GeoDoo/post-your-standup/issues"
  },
  "license": "GNU GPL v3.0",
  "keywords": [
    "node",
    "express"
  ],
  "devDependencies": {
    "codecov": "^3.7.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "semantic-release": "^17.1.1"
  }
}
